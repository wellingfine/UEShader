// 曼德勃罗(Mandelbrot)是最早对自然界的分形
const int iter = 64;
float2 c = uv * 3 - float2(2, 1.5);

float2 z = c;

int i = 0;
for (; i < iter; i++)
{

  // 可以指定一个变量随便变，就有各种效果
  // float2 v = c * sin(time);
  float2 v = sin(c + time);

  z = float2(z.x * z.x - z.y * z.y, 2 * z.x * z.y) + v;

  if (length(z) > 2)
  {
    break;
  }
}

float mandelbrot = float(i) / float(iter);

return mandelbrot;